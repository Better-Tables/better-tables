{
  "name": "@better-tables/adapters-drizzle",
  "version": "0.5.2",
  "description": "Drizzle ORM adapter for Better Tables - Multi-database support with automatic relationship detection",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "git clean -xdf .cache dist .turbo node_modules"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "drizzle-orm": "^0.44.7"
  },
  "peerDependencies": {
    "@better-tables/core": "workspace:*",
    "mysql2": "^3.12.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@better-tables/core": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "dotenv": "^17.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.5.0",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "table",
    "data-table",
    "data-grid",
    "drizzle",
    "orm",
    "database",
    "postgresql",
    "mysql",
    "sqlite",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Better-Tables/better-tables",
    "directory": "packages/adapters/drizzle"
  },
  "bugs": {
    "url": "https://github.com/Better-Tables/better-tables/issues"
  },
  "homepage": "https://github.com/Better-Tables/better-tables#readme"
}
