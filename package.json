{
  "name": "@better-tables/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A comprehensive React table library with advanced filtering",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/adapters/*",
      "apps/*",
      "examples/*"
    ],
    "catalog": {
      "@types/react": "^19.1.8",
      "@types/react-dom": "^19.1.6",
      "typescript": "^5.8.3"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo watch dev",
    "dev:run": "turbo run dev",
    "test": "turbo run test",
    "clean": "bun run --filter '*' clean",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.12",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "turbo": "^2.5.4",
    "typescript": "catalog:",
    "@types/bun": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/better-tables"
  },
  "keywords": [
    "react",
    "table",
    "data-grid",
    "filtering",
    "sorting",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
