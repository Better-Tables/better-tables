{
  "name": "@better-tables/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A comprehensive React table library with advanced filtering",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/adapters/*",
      "apps/*",
      "examples/*"
    ],
    "catalog": {
      "@types/react": "^19.1.8",
      "@types/react-dom": "^19.1.6",
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "tailwindcss": "^4.1.17",
      "tsdown": "^0.16.6",
      "typescript": "^5.8.3"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo watch dev",
    "dev:run": "turbo run dev",
    "typecheck": "tsc --noEmit",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "changeset": "changeset",
    "changeset:version": "changeset version && bun install",
    "release": "bun i && bun run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.0.12",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "turbo": "^2.6.1",
    "typescript": "catalog:",
    "@types/bun": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Better-Tables/better-tables"
  },
  "keywords": [
    "react",
    "table",
    "data-grid",
    "filtering",
    "sorting",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
