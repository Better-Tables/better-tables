{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "files": {
    "ignoreUnknown": false,
    "experimentalScannerIgnores": [
      ".turbo/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/.next/**",
      "**/build/**",
      "coverage/**",
      "bun.lock",
      ".git/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noConsole": "warn",
        "noDoubleEquals": "error"
      },
      "style": {
        "useTemplate": "error",
        "useNamingConvention": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "noUnusedVariables": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "overrides": [
    {
      "includes": ["packages/core/**"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          },
          "suspicious": {
            "noExplicitAny": "error"
          }
        }
      }
    },
    {
      "includes": ["packages/ui/**"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          },
          "suspicious": {
            "noExplicitAny": "error"
          }
        }
      }
    }
  ]
}
